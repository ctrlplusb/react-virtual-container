{
  "name": "npm-library-starter",
  "version": "0.0.1",
  "description": "Starter kit for npm libraries.",
  "license": "MIT",
  "main": "commonjs/index.js",
  "files": [
    "*.js",
    "*.md",
    "umd",
    "commonjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrlplusb/npm-library-starter.git"
  },
  "homepage": "https://github.com/ctrlplusb/npm-library-starter#readme",
  "author": "Sean Matheson <sean@ctrlplusb.com>",
  "keywords": [
    "library"
  ],
  "scripts": {
    "build": "babel-node ./tools/scripts/build.js",
    "check": "yarn run lint && yarn run test",
    "clean": "rimraf ./commonjs && rimraf ./umd && rimraf ./coverage && rimraf ./umd",
    "example:web": "echo 'Make sure to `cd example/web && yarn install`' && cd example/web && yarn run start",
    "lint": "eslint src",
    "precommit": "lint-staged && npm run test",
    "prepublish": "yarn run build",
    "test": "jest",
    "test:coverage": "yarn run test -- --coverage",
    "test:coverage:deploy": "yarn run test:coverage && codecov"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(commonjs|coverage|flow-typed|node_modules|tools|umd)/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "devDependencies": {
    "app-root-dir": "1.0.2",
    "babel-cli": "6.24.0",
    "babel-core": "6.24.0",
    "babel-eslint": "7.2.1",
    "babel-jest": "19.0.0",
    "babel-loader": "6.4.1",
    "babel-polyfill": "6.23.0",
    "babel-preset-env": "1.2.2",
    "babel-preset-latest": "6.24.0",
    "babel-preset-stage-3": "6.22.0",
    "babel-register": "6.24.0",
    "codecov": "2.1.0",
    "cross-env": "3.2.4",
    "eslint": "3.18.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "gzip-size": "3.0.0",
    "husky": "0.13.3",
    "in-publish": "2.0.0",
    "jest": "19.0.2",
    "lint-staged": "3.4.0",
    "prettier": "0.22.0",
    "prettier-eslint": "4.3.2",
    "prettier-eslint-cli": "3.1.3",
    "pretty-bytes": "4.0.2",
    "ramda": "0.23.0",
    "readline-sync": "1.4.7",
    "rimraf": "2.6.1",
    "webpack": "2.3.2",
    "webpack-dev-middleware": "1.10.1",
    "webpack-hot-middleware": "2.17.1"
  }
}
