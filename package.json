{
  "name": "react-virtual-container",
  "version": "0.1.0",
  "description": "Optimise your React apps by only rendering components when in proximity to the viewport.",
  "license": "MIT",
  "main": "dist/react-virtual-container.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrlplusb/react-virtual-container.git"
  },
  "homepage": "https://github.com/ctrlplusb/react-virtual-container#readme",
  "author": "Sean Matheson <sean@ctrlplusb.com>",
  "keywords": [
    "library",
    "react",
    "virtual",
    "windowing",
    "render props"
  ],
  "scripts": {
    "build": "node ./tools/scripts/build.js",
    "clean": "rimraf ./dist && rimraf ./coverage",
    "lint": "eslint src",
    "precommit": "lint-staged && npm run test",
    "prepublish": "npm run build",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage:deploy": "npm run test:coverage && codecov"
  },
  "peerDependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.1"
  },
  "dependencies": {
    "react-waypoint": "^8.0.2"
  },
  "devDependencies": {
    "app-root-dir": "^1.0.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.2.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "change-case": "^3.0.2",
    "codecov": "^3.0.4",
    "cross-env": "^5.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.10.0",
    "gzip-size": "^5.0.0",
    "husky": "^0.14.3",
    "in-publish": "^2.0.0",
    "jest": "^23.3.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "prettier-eslint": "^8.8.2",
    "pretty-bytes": "^5.1.0",
    "ramda": "^0.25.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "readline-sync": "^1.4.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-uglify": "^4.0.0",
    "sinon": "^6.1.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(commonjs|coverage|node_modules|tools|umd)/"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "array-callback-return": 0,
      "camelcase": 0,
      "import/prefer-default-export": 0,
      "import/no-extraneous-dependencies": 0,
      "no-underscore-dangle": 0,
      "no-nested-ternary": 0,
      "react/no-array-index-key": 0,
      "react/react-in-jsx-scope": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-filename-extension": 0,
      "react/sort-comp": 0
    }
  },
  "eslintIgnoreConfig": [
    "node_modules/",
    "coverage/",
    "dist/"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "parser": "flow"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write \"src/**/*.js\"",
      "git add"
    ]
  }
}
